<div class="content">
  <div class="page-header">
    <%= editable_content :div, 'header', "<h1>Page nameX</h1> <small>Supporting text or tagline</small>" %>
  </div>
  <div class="row">
    <div class="span3 left">
      <%= editable_content :div, 'left', "<h5>Left</h5>Some content" %>
    </div>
    <div class="span8 center">
      <%= editable_content :div, 'center', "<h1>Center</h1>Some Content" %>
    </div>
    <div class="span3 right">
      <%= editable_content :div, 'right', "<h5>Right</h5>Some content" %>
    </div>
  </div>
</div>

<footer>
  <%= editable_content :p, 'footer', "&copy; Company 2011" %>
</footer>



<%# content_for :style_overrides do %>
  <style type="text/css">
    
    body { padding-top: 10px; }
    .container > footer p { text-align: center; }
    
    .content {
      padding: 20px;
      margin: 0 -20px; /* negative indent the amount of the padding to maintain the grid system */
      -webkit-border-radius: 0 0 6px 6px;
         -moz-border-radius: 0 0 6px 6px;
              border-radius: 0 0 6px 6px;
      -webkit-box-shadow: 0 1px 2px rgba(0,0,0,.15);
         -moz-box-shadow: 0 1px 2px rgba(0,0,0,.15);
              box-shadow: 0 1px 2px rgba(0,0,0,.15);
    }
    
    /* Page header tweaks */
    .page-header {
      background-color: whiteSmoke;
      padding: 20px 20px 10px;
      margin: -20px -20px 20px;
      -webkit-border-radius: 6px;
      -moz-border-radius: 6px;
      border-radius: 6px;
    }
    .content { min-height: 400px; }
    
    /* Give a quick and non-cross-browser friendly divider */
    .content, .span {
      margin-left: 0;
      padding-left: 19px;
      border-left: 1px solid #eee;
    }

  </style>
<%# end %>
